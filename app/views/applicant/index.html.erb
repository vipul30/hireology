<div class="row">
    <div class="col-md-8 col-md-offset-2">

       

        <h1>Hireology Job Applications</h1>
        <br/>

        <%= paginate @applicants %>

        <br/>

        <table class="table table-responsive table-bordered table-striped">
            <tbody>
                <tr>
                    <th>Applicant ID</th>
                    <th>Name</th>
                    <th>Job Title</th>
                    <th></th>
                </tr>
                <% @applicants.each do |applicant| %>
                    <tr>
                        <td><%= applicant.id %></td>
                        <td><%= applicant.first_name %> <%= applicant.last_name %></td>
                        <td><%= applicant.job.title %></td>
                        
                        <td><%= link_to "View", '/applicant/show?id=' + applicant.id.to_s %><br/>
                          
                        </td>
                    </tr>
                <% end %>
                
            </tbody>
        </table>    

    </div>
</div>  
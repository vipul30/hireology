
<div class="row">

	<div class="col-md-8 col-md-offset-2">

		<h1>Hireology Jobs</h1>
		<br/>
	 	<%= paginate @jobs %>
	 	<br/>
	 	<hr/>

	 	<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
	 		<% @jobs.each do |job| %>

	 			<div class="panel panel-default">
			    <div class="panel-heading" role="tab" id="heading<%=job.id%>">
			      <h4 class="panel-title">
			        <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse<%=job.id%>" aria-expanded="false" aria-controls="collapse<%=job.id%>">
			          + <%= job.title %>
			        </a>
			      </h4>
			    </div>
			    <div id="collapse<%=job.id%>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading<%=job.id%>">
			      <div class="panel-body">
			        <p><%= job.description.html_safe %></p>
	 				<br/>
	 		
	 				<%= button_to "Apply Now", '/applicant/new', :id => job.id, :method => :get, params: { job_id: job.id } %>

			      </div>
			    </div>
			  </div>

	 		<% end %>
			  
		</div>
	 	
	 </div>
</div>
